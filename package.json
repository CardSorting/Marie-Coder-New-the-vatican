{
  "name": "marie",
  "displayName": "Marie",
  "version": "0.1.0",
  "description": "Marie - AI coding agent for VS Code and CLI",
  "publisher": "cardsorting",
  "repository": {
    "type": "git",
    "url": "https://github.com/CardSorting/Marie-Coder-New.git"
  },
  "main": "dist/extension.cjs",
  "engines": {
    "vscode": "^1.105.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:marie.start",
    "onView:marieView"
  ],
  "contributes": {
    "commands": [
      {
        "command": "marie.start",
        "title": "Marie: Start"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "marieSidebar",
          "title": "Marie",
          "icon": "assets/icon.png"
        }
      ]
    },
    "views": {
      "marieSidebar": [
        {
          "id": "marieView",
          "name": "Marie",
          "type": "webview"
        }
      ]
    }
  },
  "bin": {
    "marie": "./dist/cli-new/index.js"
  },
  "scripts": {
    "build": "npm run build:extension && npm run build:cli",
    "build:extension": "node esbuild.mjs --production",
    "build:cli": "tsc && chmod +x dist/cli-new/index.js",
    "package:extension": "npx @vscode/vsce package",
    "dev": "node --loader ts-node/esm src/cli-new/index.ts",
    "start": "node dist/cli-new/index.js",
    "test": "npm run test:cli",
    "test:cli": "node --loader ts-node/esm tests/cli/run_all_tests.ts",
    "test:cli:storage": "node --loader ts-node/esm tests/cli/test_storage.ts",
    "test:cli:marie": "node --loader ts-node/esm tests/cli/test_marie_cli.ts",
    "test:cli:tools": "node --loader ts-node/esm tests/cli/test_tool_definitions.ts",
    "test:cli:joy": "node --loader ts-node/esm tests/cli/test_joy_services.ts"
  },
  "keywords": [
    "ai",
    "cli",
    "coding",
    "agent"
  ],
  "author": "",
  "license": "Apache-2.0",
  "type": "module",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@cerebras/cerebras_cloud_sdk": "^1.64.1",
    "chalk": "^5.3.0",
    "ink": "^5.0.0",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "^12.0.0",
    "marked-terminal": "^7.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "shiki": "^1.0.0",
    "simple-git": "^3.22.0",
    "strip-ansi": "^7.1.0",
    "wrap-ansi": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/vscode": "^1.105.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}